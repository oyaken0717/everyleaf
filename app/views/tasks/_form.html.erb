<%= form_with(model: @task, local:true) do |f| %>
  <% if @task.errors.any? %>
    <h2><%= @task.errors.count %>件のエラーがあります。</h2>
    <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :仕事名 %>
	<%= f.text_field :title %>
	<%= f.label :仕事内容 %>
	<%= f.text_field :content %>
  <%= f.label :終了期限 %>
  <%= f.date_field :limit %>
  <%= f.label :進捗 %>
  <%= f.select(:status,['未着手', '着手中', '完了']) %>
  <%#= f.label :順位 %>
  <%#= f.select(:priority,Task.priorities.keys) %>
	<%= f.submit value="登録する" %>
<% end %>